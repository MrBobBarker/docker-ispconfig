#!/bin/bash

SVC=${2%.service}
case "$1" in
        restart)
                /etc/init.d/$SVC restart
        ;;
        stop)
                /etc/init.d/$SVC stop
        ;;
        status)
                /etc/init.d/$SVC status
        ;;
        start)
                /etc/init.d/$SVC start
        ;;
        *)
                command systemctloriginal "$@"
        exit 1
esac
